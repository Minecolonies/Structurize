<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd"
        size="420 240" pause="false" lightbox="false">

    <layout source="structurize:gui/layoutmanipulation.xml"/>

    <button label="$(com.ldtteam.structurize.gui.shapetool.pickmainblock)" id="pickMainBlock" pos="24 3" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <itemicon id="resourceIconMain" item="minecraft:gold_block" size="17 17" pos="59 20"/>


    <button label="$(com.ldtteam.structurize.gui.shapetool.pickfillblock)" id="pickFillBlock" pos="24 43" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <itemicon id="resourceIconFill" item="minecraft:gold_block" size="17 17" pos="59 60"/>

    <toggle id="hollowShape" options="$(com.ldtteam.structurize.gui.shapetool.solid)|$.hollow" pos="24 83" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <button id="previousShape" size="14 15" pos="130 3" label="&lt;"
                 source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    <dropdown id="style" size="129 17" pos="145 3" maxContentHeight="75" dropDownSize="140 75" source="structurize:textures/gui/builderhut/builder_button_medium_large.png" textcolor="black">
        <view size="100% 15">
            <text id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>
    <button id="nextShape" size="14 15" pos="275 3" label="&gt;"
            source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>

    <view id="heightInput" size="105 20" pos="300 1">
        <text label="Height" size="40 20" pos="0 0"/>
        <input id="height" size="30 20" pos="60 0" maxlength="3"/>
        <button id="heightminus" size="14 15" pos="46 2" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <button id="heightplus" size="14 15" pos="91 2" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    </view>

    <view id="widthInput" size="105 20" pos="300 26">
        <text label="Width" size="40 20" pos="0 0"/>
        <input id="width" size="30 20" pos="60 0" maxlength="3"/>
        <button id="widthminus" size="14 15" pos="46 2" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <button id="widthplus" size="14 15" pos="91 2" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    </view>

    <view id="lengthInput" size="105 20" pos="300 51">
        <text label="Length" size="40 20" pos="0 0"/>
        <input id="length" size="30 20" pos="60 0" maxlength="3"/>
        <button id="lengthminus" size="14 15" pos="46 2" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <button id="lengthplus" size="14 15" pos="91 2" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    </view>

    <view id="frequencyInput" size="105 20" pos="300 76">
        <text label="Frequency" size="40 20" pos="0 0"/>
        <input id="frequency" size="30 20" pos="60 0" maxlength="3"/>
        <button id="frequencyminus" size="14 15" pos="46 2" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <button id="frequencyplus" size="14 15" pos="91 2" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    </view>

    <view id="shapeInput" size="180 20" pos="120 30">
        <text label="Shape" size="40 20" pos="0 0"/>
        <input id="shape" size="135 20" pos="45 0" maxlength="200"/>
    </view>

    <button id="undoredo"
                 tooltip="$(structurize.gui.undoredo)"
                 source="structurize:textures/gui/buildtool/undoredo.png"
                 visible="true"
                 size="32 32"
                 pos="395 210"
                 textcolor="Black"
                 texthovercolor="White"/>
</window>
