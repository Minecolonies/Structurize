<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../java/com/ldtteam/blockout/blockOut.xsd"
        size="420 240" pause="false" type="OVERSIZED_VANILLA" lightbox="true">

    <button id="cancel" source="structurize:textures/gui/buildtool/button_medium.png" label="$(structurize.gui.buildtool.cancel)" size="86 17" pos="3 3" textcolor="black" texthovercolor="gray"/>

    <list size="420 200" pos="0 20" id="packs" visible="false">
        <box size="100% 100" linewidth="0">
            <box size="200 100" linewidth="0" pos="0 0"  id="box1">
                <image id="icon1" pos="0 0" size="80 80" source="structurize:textures/items/sceptersteel.png"/>

                <text id="name1" pos="81 0" size="119 17" color="white" textscale="1.2"/>
                <text id="desc1" pos="81 20" size="119 50" color="white" textscale="0.6"/>
                <text id="authors1" pos="90 70" size="110 30" color="white" textscale="0.8"/>

                <button id="select1"
                        source="structurize:textures/gui/buildtool/button_medium.png"
                        text="$(structurize.gui.switchpack.select)"
                        size="86 17"
                        pos="0 80"
                        textColor="black"
                        texthovercolor="gray"/>
            </box>
            <box size="210 100" linewidth="0" pos="200 0" id="box2">
                <image id="icon2" pos="0 0" size="80 80" source="structurize:textures/items/sceptersteel.png"/>

                <text id="name2" pos="81 0" size="119 17" color="white" textscale="1.2"/>
                <text id="desc2" pos="81 20" size="119 50" color="white" textscale="0.6"/>
                <text id="authors2" pos="90 70" size="110 30" color="white" textscale="0.9"/>

                <button id="select2"
                        source="structurize:textures/gui/buildtool/button_medium.png"
                        text="$(structurize.gui.switchpack.select)"
                        size="86 17"
                        pos="0 80"
                        textColor="black"
                        texthovercolor="gray"/>
            </box>
        </box>
    </list>



</window>
