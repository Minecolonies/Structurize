<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd"
        size="420 240" pause="false" lightbox="false">

    <text size="50 11" pos="60 10" color="white" label="$(com.ldtteam.structurize.gui.scantool.from)"/>
    <input id="pos1x" size="36 18" pos="90 5" maxlength="10"/>
    <input id="pos1y" size="36 18" pos="130 5" maxlength="10"/>
    <input id="pos1z" size="36 18" pos="170 5" maxlength="10"/>

    <text size="50 11" pos="220 10" color="white" label="$(com.ldtteam.structurize.gui.scantool.to)"/>
    <input id="pos2x" size="36 18" pos="240 5" maxlength="10"/>
    <input id="pos2y" size="36 18" pos="280 5" maxlength="10"/>
    <input id="pos2z" size="36 18" pos="320 5" maxlength="10"/>

    <text size="100 11" pos="72 35" color="white" label="$(com.ldtteam.structurize.gui.scantool.name)"/>
    <input id="name" size="178 18" pos="130 30" maxlength="180"/>

    <text size="30 11" pos="355 35" color="white" label="$(com.ldtteam.structurize.gui.scantool.slot)" textalign="MIDDLE_RIGHT"/>
    <input id="slot" size="18 18" pos="390 30" maxlength="2" enabled="false"/>

    <button id="confirm" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="105 50"/>
    <button id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="275 50"/>

    <button label="$(com.ldtteam.structurize.gui.scantool.showres)" id="showRes" pos="140 58" size="129 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium_large.png" textcolor="black"/>

    <button id="fillplaceholders" pos="320 31" size="17 17"
                 source="structurize:textures/gui/buildtool/default.png" tooltip="$(com.ldtteam.structurize.gui.scantool.fillplacerholder.tooltip)" textcolor="black"/>
    <view id="fillplaceholdersui" size="95 95" pos="290 55" visible="false">
        <layout source="structurize:gui/windowplaceholderfill.xml"/>
    </view>

    <input id="filter" size="129 17" pos="140 58" maxlength="25" visible="false"/>

    <list id="resources" size="200 120" pos="10 100" childspacing="-1">
        <box size="100% 30" linewidth="1">
            <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
            <text id="resourceName" size="142 12" pos="19 1" color="white" wrap="true"/>
            <text id="resourceQuantity" size="30 12" pos="160 1" color="white" textalign="MIDDLE_RIGHT"/>
            <button label="$(com.ldtteam.structurize.gui.scantool.remove)" id="removeBlock" pos="19 13" size="86 17"
                         source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
            <button label="$(com.ldtteam.structurize.gui.scantool.replace)" id="replaceBlock" pos="104 13" size="86 17"
                         source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
        </box>
    </list>

    <list id="entities" size="200 100" pos="220 100" childspacing="-1">
        <box size="100% 30" linewidth="1">
            <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
            <text id="resourceName" size="172 12" pos="19 1" color="white" wrap="true"/>
            <button label="$(com.ldtteam.structurize.gui.scantool.remove)" id="removeEntity" pos="19 13" size="86 17"
                         source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
            <text id="resourceQuantity" size="30 12" pos="160 1" color="white" textalign="MIDDLE_RIGHT"/>
        </box>
    </list>

    <button id="undoredo"
                 tooltip="$(structurize.gui.undoredo)"
                 source="structurize:textures/gui/buildtool/undoredo.png"
                 visible="true"
                 size="32 32"
                 pos="395 210"
                 textcolor="Black"
                 texthovercolor="White"/>

    <text id="chestwarning" size="140 11" pos="140 75" textscale="0.5" visible="false"
           label="$(com.ldtteam.structurize.gui.scantool.chests)"/>

    <button label="$(com.ldtteam.structurize.gui.scantool.remove_filtered)" id="removefiltered" pos="80 83" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black" visible="false"/>
</window>
