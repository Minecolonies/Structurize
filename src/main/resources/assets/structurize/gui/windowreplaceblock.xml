<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd"
        pause="false" lightbox="true">
    <text size="100% 11" pos="0 25" textalign="TOP_MIDDLE" color="white"
           label="$(com.ldtteam.structurize.gui.scan.replace.title)"/>
    <input id="name" size="150 18" pos="135 40" maxlength="25"/>

    <itemicon id="resourceIconFrom" size="17 17" pos="0 1"/>
    <text id="resourceNameFrom" size="140 12" pos="30 4" color="white"/>

    <text id="to" label="->" size="120 12" pos="150 4" color="white"/>

    <itemicon id="resourceIconTo" size="17 17" pos="170 1"/>
    <text id="resourceNameTo" size="140 12" pos="200 4" color="white"/>

    <text id="pctlabel" size="105 12" pos="300 4" color="white" label="$(com.ldtteam.structurize.gui.scan.replace.pct)"/>
    <input id="pct" size="30 18" pos="405 2" maxlength="3"/>

    <list id="resources" size="270 120" pos="80 65" childspacing="-1">
        <box size="100% 18" linewidth="1">
            <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
            <text id="resourceName" size="135 18" pos="20 0" color="white" wrap="true"/>
            <button label="$(com.ldtteam.structurize.gui.scantool.select)" id="select" pos="160 1" size="86 17"
                         source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
        </box>
    </list>

    <button id="done" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="145 185"/>
    <button id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="235 185"/>
</window>
